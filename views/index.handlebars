<style>
  .top {
    position: relative;
    max-height: 190px;
    overflow: hidden;
  }
</style>

<div class="row">
  <ul class="collapsible accordion">
    {{#each data}}
      <li data-id={{this.id}} class="datum">
        <div class="collapsible-header">
          <h6>{{this.title}}</h6>
          <hr>
          <h6>{{this.author}}</h6>
        </div>
        <div class="collapsible-body">
          <p class="dropdown-remind"><i class="fas fa-arrow-circle-down"></i></p>
          <a class="btn waves-effect" onclick="M.toast({html: 'Favorited!'})"><i class="far fa-star"></i></a>
          <a class="btn waves-effect comment">comment</a>
          {{#if this.content}}
            <div class="row">
              <div class="col s6">
                <p class="top">{{this.content}}</p>
                <a class="btn waves-effect more">Read More -></a>
              </div>
              <div class="col s6">
                <img src={{this.image}} alt="article-image"/>
              </div>
            </div>
            <div class="container"></div>
          {{/if}}
        </div>
      </li>
    {{/each}}
  </ul>
</div>